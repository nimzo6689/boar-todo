{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Debug",
			"type": "go",
			"request": "launch",
			"mode": "auto",
			"program": "main.go",
			"args": [
				"--debug",
				"--use-config-file=${workspaceFolder}/.vscode/debugger_config.yml"
			],
			"hideSystemGoroutines": true,
			"console": "integratedTerminal"
		},
		{
			"name": "Attach to a running Boar todo",
			"type": "go",
			"request": "attach",
			"mode": "local",
			"processId": "boar-todo",
			"hideSystemGoroutines": true,
			"console": "integratedTerminal"
		}
	]
}
